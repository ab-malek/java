import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.Scanner;

class mara extends JFrame implements ActionListener{
    JMenu filemenu,loadmenu,helpmenu;
    JMenuBar menuber;
    JMenuItem fileitem,loaditem,helpitem;

    mara() {
        this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        this.setLayout(new FlowLayout());
        this.setSize(500,500);

        menuber = new JMenuBar();
        filemenu = new JMenu("File");
        loadmenu = new JMenu("Load");

        fileitem = new JMenuItem("file ");
        loaditem = new JMenuItem("Load");
        helpitem = new JMenuItem("Help");

        filemenu.add(fileitem);
        filemenu.add(loaditem);
        filemenu.add(helpitem);

        menuber.add(loadmenu);
        menuber.add(filemenu);
        this.setJMenuBar(menuber);
        this.setVisible(true);

    }


    @Override
    public void actionPerformed(ActionEvent e) {

    }
}

public class Main{

    public static void main(String[] args){
        new mara();
    }

}
